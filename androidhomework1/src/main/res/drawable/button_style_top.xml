<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffa0a0a4"/>
            <stroke android:width="0.5dp" android:color="#00000000"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="#ffb6b7ba"/>
            <stroke android:width="0.5dp" android:color="#00000000"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#ffb6b7ba"/>
            <stroke android:width="0.5dp" android:color="#00000000"/>
        </shape>
    </item>
</selector>