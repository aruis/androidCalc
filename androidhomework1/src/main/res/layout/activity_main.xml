<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#FF1A1A1A"
              tools:context="${relativePackage}.${activityClass}">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:layout_weight="1.5"
            android:textSize="55sp"
            android:gravity="center_vertical|right" android:paddingRight="5dp"
            android:textColor="#ffe8e8e8"/>
</LinearLayout>
